import pygame
import sys

pygame.init()

largeur = 500
hauteur = 600
screen = pygame.display.set_mode((largeur, hauteur))
pygame.display.set_caption("Grid")

BLACK = (0, 0, 0)
WHITE = (255, 255, 255)
GRAY = (200, 200, 200)

box = 9
cellsize = (largeur-50) // box

running = True
while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    screen.fill(BLACK)
    for lign in range(box):
        for col in range(cellsize):
            pygame.draw.rect(screen, GRAY, (col * cellsize, lign * cellsize, cellsize, cellsize), 1)

    pygame.display.flip()

# Quit Pygame
pygame.quit()
